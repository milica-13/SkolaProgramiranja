<Window x:Class="SkolaProgramiranja.Views.PromijeniLozinkuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SkolaProgramiranja.Views"
        mc:Ignorable="d"
        Title="Promijeni lozinku" Height="450" Width="400" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">
    <Window.InputBindings>
        <KeyBinding Key="Enter"
                Command="{Binding RelativeSource={RelativeSource AncestorType=Window},
                                  Path=Tag}" />
    </Window.InputBindings>

    <Grid Margin="20">
        <materialDesign:Card Padding="24">
            <StackPanel>

                <TextBlock Text="{DynamicResource Form_ChangePassword_Title}"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,24"
                           Foreground="{DynamicResource PrimaryHueMidBrush}" />

                <!-- N O V A  L O Z I N K A -->
                <Grid Margin="0,0,0,16">
                    <PasswordBox x:Name="txtNovaLozinka"
                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                 materialDesign:HintAssist.Hint="{DynamicResource Hint_NewPassword}"/>

                    <ToggleButton x:Name="btnShow"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Right"
                  Width="30" 
                  Height="20" 
                  Margin="0,0,5,0"
                  Content="👁"
                  Background="White"
                  BorderBrush="White"
                  Checked="btnShow_Checked"
                  Unchecked="btnShow_Checked"/>
                </Grid>

                <Grid Margin="0,0,0,24">
                    <PasswordBox x:Name="txtPotvrda"
                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                 materialDesign:HintAssist.Hint="{DynamicResource Hint_ConfirmPassword}"/>
                </Grid>


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="{DynamicResource Btn_Save}"
                            Click="Sacuvaj_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="{DynamicResource PrimaryHueMidBrush}"
                            Margin="0,0,10,0"/>
                    <Button Content="{DynamicResource Btn_Cancel}"
                            Click="Otkazi_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Snackbar x:Name="MainSnackbar"
                                 VerticalAlignment="Bottom"
                                 Margin="10"
                                 MessageQueue="{materialDesign:MessageQueue}" />
    </Grid>
</Window>
