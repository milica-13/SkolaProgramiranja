<Window x:Class="SkolaProgramiranja.Views.InstruktorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        Title="Instruktor profil"
        Height="550"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Control" Command="{x:Static ApplicationCommands.New}" />
    </Window.InputBindings>

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR kao card -->
        <Border Grid.Column="0" Background="#EAD7F5" Padding="16"
                CornerRadius="16"
                Margin="16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Avatar + ime -->
                    <StackPanel Margin="0,4,0,12" HorizontalAlignment="Center">
                        <Border Width="88" Height="88" CornerRadius="44"
                                BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="2"
                               >
                            <Image x:Name="imgProfilna" Stretch="UniformToFill" />
                        </Border>
                        <TextBlock Text="{Binding Ime}" FontSize="18" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,8,0,0"/>
                        <TextBlock Text="{Binding Prezime}" FontSize="14"
                                   Opacity="0.8" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Separator Margin="0,4,0,12"/>

                    <!-- Navigacija  -->
                    <StackPanel
                        materialDesign:ButtonAssist.CornerRadius="12">

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="UrediProfil_Click" Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountEdit" Width="20" Margin="0,0,8,0"/>
                                <TextBlock Text="{DynamicResource EditProfile}"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="PregledProfila_Click" Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountBox" Width="20" Margin="0,0,8,0"/>
                                <TextBlock Text="{DynamicResource ViewProfile}"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="PromijeniLozinku_Click" Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LockReset" Width="20" Margin="0,0,8,0"/>
                                <TextBlock Text="{DynamicResource ChangePassword}"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="EvidencijaCasa_Click" Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="NotePlusOutline" Width="20" Margin="0,0,8,0"/>
                                <TextBlock Text="{DynamicResource ClassLog}"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="PregledEvidencije_Click" Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileDocument" Width="20" Margin="0,0,8,0"/>
                                <TextBlock Text="{DynamicResource ViewLog}"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="Odjava_Click" Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Logout" Width="20" Margin="0,0,8,0"/>
                                <TextBlock Text="{DynamicResource Logout}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Separator Margin="0,12"/>

                    <!-- Tema + Jezik -->
                    <StackPanel Margin="0,6,0,0" HorizontalAlignment="Center" >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                            <TextBlock Text="{DynamicResource Theme}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ToggleButton x:Name="ThemeToggle"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          Checked="ThemeToggle_Checked"
                                          Unchecked="ThemeToggle_Unchecked"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="SR" Style="{StaticResource MaterialDesignOutlinedButton}" Padding="8,2"
                                    Click="PromijeniJezikSrpski_Click" Margin="4,0"/>
                            <Button Content="EN" Style="{StaticResource MaterialDesignOutlinedButton}" Padding="8,2"
                                    Click="PromijeniJezikEngleski_Click" Margin="4,0"/>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- GLAVNI SADRŽAJ -->
        <Grid Grid.Column="1" Margin="0,16,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- naslov + kurs + precica -->
            <DockPanel Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="{DynamicResource InstructorProfile}" FontSize="20" FontWeight="Bold"
                           DockPanel.Dock="Left" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <ComboBox x:Name="cbKursevi"
                              Width="240" Margin="8,0,0,0"
                              DisplayMemberPath="Naziv"
                              SelectionChanged="cbKursevi_SelectionChanged"
                              Style="{StaticResource MaterialDesignDataGridComboBox}"
                              materialDesign:HintAssist.Hint="Odaberi kurs"/>
                    <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="Dodaj plan" Margin="6,0,0,0"
                            Click="DodajPlan_Click">
                        <materialDesign:PackIcon Kind="CalendarPlus"/>
                    </Button>
                </StackPanel>
            </DockPanel>

            <!-- SREDISNJI DIO: Kalendar + Plan rada -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- KALENDAR u kartici -->
                <materialDesign:Card Grid.Column="0" Padding="12"
                                     UniformCornerRadius="16">
                    <Calendar x:Name="calCasovi"
                              Width="260"
                              FirstDayOfWeek="Monday"
                              IsTodayHighlighted="True"
                              SelectionMode="MultipleRange"
                              SelectedDatesChanged="calCasovi_SelectedDatesChanged"/>
                </materialDesign:Card>

                <!-- PLAN RADA (list kartica) -->
                <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource WorkPlan}" FontWeight="Bold" Margin="0,0,0,6"/>
                        <ItemsControl x:Name="icRaspored">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Card Margin="0,8,0,0" Padding="10"
                                                         UniformCornerRadius="12"
                                                         >
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="140"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="44"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" CornerRadius="8" Padding="8"
                                                    Background="{DynamicResource MaterialDesignCardBackground}">
                                                <TextBlock Text="{Binding Datum, StringFormat=dd.MM.yyyy}"
                                                           FontWeight="SemiBold" HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <TextBox Grid.Column="1" Margin="10,0"
                                                     Text="{Binding Tema, UpdateSourceTrigger=PropertyChanged}"
                                                     TextWrapping="Wrap"
                                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                     materialDesign:HintAssist.Hint="Tema časa"/>

                                            <Button Grid.Column="2"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Click="SpremiPlan_Click"
                                                    ToolTip="Snimi">
                                                <materialDesign:PackIcon Kind="ContentSave"/>
                                            </Button>
                                        </Grid>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- EVIDENCIJE u expander-kartici -->
            <materialDesign:Card Grid.Row="2"
                     Margin="0,12,0,0"
                     UniformCornerRadius="16"
                     Padding="0">
                <Expander IsExpanded="False">
                    <Expander.Header>
                        <DockPanel Margin="12">
                            <materialDesign:PackIcon Kind="ClipboardList" Width="20" Margin="0,0,8,0"/>
                            <TextBlock Text="{DynamicResource ClassLog}" FontWeight="SemiBold"/>
                        </DockPanel>
                    </Expander.Header>

                    <Border Background="{DynamicResource MaterialDesignPaper}" Padding="16">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          CanContentScroll="True"
                          MaxHeight="300">
                            <StackPanel x:Name="spEvidencije"
                            Margin="0,0,0,4"/>
                        </ScrollViewer>
                    </Border>
                </Expander>
            </materialDesign:Card>

            <!-- Snackbar -->
            <materialDesign:Snackbar x:Name="MainSnackbar"
                                     Grid.RowSpan="3"
                                     MessageQueue="{materialDesign:MessageQueue}"
                                     VerticalAlignment="Bottom"
                                     Margin="16"/>
        </Grid>
    </Grid>
</Window>
