<Window x:Class="SkolaProgramiranja.Views.InstruktorPregledEvidencijeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkolaProgramiranja.Views"
        mc:Ignorable="d"
        Title="{DynamicResource WindowTitle_EvidencijaCasova}"
        Height="500" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FILTERI -->
        <DockPanel Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <ComboBox x:Name="cbKursevi"
                          Width="160"
                          Style="{StaticResource MaterialDesignDataGridComboBox}"
                          materialDesign:HintAssist.Hint="{DynamicResource Hint_Kurs}"/>

                <DatePicker x:Name="dpDatum"
                            Width="160"
                            materialDesign:HintAssist.Hint="{DynamicResource Hint_Datum}"/>

                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="Filtriraj_Click"
                        Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Filter" Width="20" Margin="0,0,5,0"/>
                        <TextBlock Text="{DynamicResource Btn_Filtriraj}"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="Odustani_Click"
                        Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CloseCircleOutline" Width="20" Margin="0,0,5,0"/>
                        <TextBlock Text="{DynamicResource Btn_Odustani}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- TABELA -->
        <DataGrid x:Name="dgEvidencije"
          Grid.Row="1"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          CanUserAddRows="False"
          HeadersVisibility="Column"
          SelectionMode="Single"
          Style="{StaticResource MaterialDesignDataGrid}"
          ItemsSource="{Binding}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Datum"
                        Binding="{Binding Datum, StringFormat=dd.MM.yyyy}"
                        Width="120"/>

                <DataGridTextColumn Header="Kurs"
                        Binding="{Binding KursNaziv}"
                        Width="*"/>

                <DataGridTextColumn Header="Tema"
                    Binding="{Binding TemaCasa}"
                    Width="2*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="AcceptsReturn" Value="True"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>


                <DataGridTextColumn Header="Prisustvo"
                    Binding="{Binding PrisutniUcenici}"
                    Width="2*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="AcceptsReturn" Value="True"/>
                            
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
            <TextBlock x:Name="lblStatus"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Gray"
                FontStyle="Italic"/>



        </DataGrid>


    </Grid>
</Window>