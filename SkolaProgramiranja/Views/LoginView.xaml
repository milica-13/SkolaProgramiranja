<Window x:Class="SkolaProgramiranja.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkolaProgramiranja.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/shared"
        mc:Ignorable="d"
        Title="Prijava"
        Height="420" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">
    <!-- ENTER = Login  -->
    <Window.InputBindings>
        <KeyBinding Key="Enter"
                Command="{Binding RelativeSource={RelativeSource AncestorType=Window},
                                  Path=Tag}" />
    </Window.InputBindings>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="1" Padding="30"
                             Background="{DynamicResource MaterialDesignPaper}"
                             Width="320"
                             HorizontalAlignment="Center">
            <StackPanel>

                <TextBlock Text="{DynamicResource Login_Title}"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Foreground="{DynamicResource PrimaryHueMidBrush}" />

                <TextBox x:Name="txtEmail"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="{DynamicResource Hint_Email}"
                         Margin="0,0,0,12"
                         Width="250"
                         HorizontalAlignment="Center"/>

                <!-- LOZINKA + OČI -->
                <Grid Width="250">
                    <!-- Sakrivena verzija -->
                    <PasswordBox x:Name="txtLozinka"
                        Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                        materialDesign:HintAssist.Hint="{DynamicResource Hint_Password}"
                        Visibility="Visible" />

                    <!-- Prikazana verzija -->
                    <TextBox x:Name="tbLozinka"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        materialDesign:HintAssist.Hint="{DynamicResource Hint_Password}"
                        Visibility="Collapsed" />

                    <Button x:Name="btnShowPassword"
                        Width="28" Height="28"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Click="btnShowPassword_Click"
                            BorderBrush="Transparent">
                        <materialDesign:PackIcon x:Name="iconEye"
                                 Kind="EyeOutline" />
                    </Button>
                </Grid>


                <Button x:Name="btnLogin"
                        Content="{DynamicResource Btn_Login}"
                        Width="150"
                        Height="35"
                        Margin="10"
                        Click="Login_Click"
                        HorizontalAlignment="Center"
                        Background="{DynamicResource PrimaryHueMidBrush}" />
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
