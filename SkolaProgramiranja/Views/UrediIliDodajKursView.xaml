<Window x:Class="SkolaProgramiranja.Views.UrediIliDodajKursView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{DynamicResource CourseTitle}" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <materialDesign:Card>
                <StackPanel>

                    <TextBlock Text="{DynamicResource AddATitle}"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           Foreground="{DynamicResource PrimaryHueMidBrush}" />

                    <TextBox x:Name="txtNaziv"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="{DynamicResource AddTitleLabel}"
                         Margin="0,0,0,16" />

                    <TextBox x:Name="txtOpis"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="{DynamicResource CourseDescription}"
                         Margin="0,0,0,16" />

                    <ComboBox x:Name="cbInstruktori"
                          Style="{StaticResource MaterialDesignDataGridComboBox}"
                          materialDesign:HintAssist.Hint="{DynamicResource Instructor}"
                          DisplayMemberPath="Ime"
                          SelectedValuePath="Id"
                          Margin="0,0,0,24" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="{DynamicResource Btn_Save}"
                            Click="Sacuvaj_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Background="{DynamicResource PrimaryHueMidBrush}"
                            Margin="0,0,10,0"/>
                        <Button Content="{DynamicResource Btn_Cancel}"
                            Click="Otkazi_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </ScrollViewer>
</Window>
