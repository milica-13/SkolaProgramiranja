<Window x:Class="SkolaProgramiranja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkolaProgramiranja"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20" Background="{DynamicResource MaterialDesignPaper}">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
            <Button Content="SR" Click="Btn_SR_Click" Margin="0,0,5,0"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
            <Button Content="EN" Click="Btn_EN_Click"
                    Style="{StaticResource MaterialDesignFlatButton}"/>

        </StackPanel>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{DynamicResource Welcome}" FontSize="26" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Image Source="D:\Fakultet\Cetvrta godina\HCI\PrviProjektniZadatak\SkolaProgramiranja\SkolaProgramiranja\Resources\skolaProgramiranja.webp"
                Width="300" Height="200" Margin="0,0,0,20"/>

            <Button Content="{DynamicResource Btn_Login}" Width="150" Height="40" Style="{StaticResource MaterialDesignRaisedButton}" Click="Prijava_Click"/>
            <!--
            <TextBlock Text="{DynamicResource NoData}" 
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="16"
               FontWeight="Bold"    
               />
            -->
        </StackPanel>     
    </Grid>
</Window>
