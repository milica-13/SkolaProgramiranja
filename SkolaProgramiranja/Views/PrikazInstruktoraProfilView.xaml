<Window x:Class="SkolaProgramiranja.Views.PrikazInstruktoraProfilView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkolaProgramiranja.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Profil instruktora" Height="450" Width="400" Background="{DynamicResource MaterialDesignPaper}" WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
        <materialDesign:Card Padding="20" Margin="10">
            <StackPanel HorizontalAlignment="Center">

                <!-- Slika -->
                <Border Width="120" Height="120" CornerRadius="60"
                        BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="2"
                        Effect="{DynamicResource MaterialDesignElevation1}">
                    <Image x:Name="imgProfilna"
                           Width="120" Height="120"
                           Stretch="UniformToFill"
                           ClipToBounds="True"/>
                </Border>

                <!-- Ime, prezime, email -->
                <TextBlock Text="{Binding Ime}" FontSize="20" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Prezime}" FontSize="18" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Email}" FontStyle="Italic" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5"/>

                <Separator Margin="10"/>

                <!-- Ostale informacije -->
                <TextBlock Text="{DynamicResource Label_Phone}" FontWeight="Bold"/>
                <TextBlock Text="{Binding Telefon}" Margin="0,0,0,5"/>

                <TextBlock Text="{DynamicResource Label_Education}" FontWeight="Bold"/>
                <TextBlock Text="{Binding Obrazovanje}" Margin="0,0,0,5"/>

                <TextBlock Text="{DynamicResource Label_Biography}" FontWeight="Bold"/>
                <TextBlock Text="{Binding Biografija}" TextWrapping="Wrap" Margin="0,0,0,5"/>

                <Button Content="{DynamicResource Btn_Close}"
                        Margin="0,20,0,0"
                        Click="Zatvori_Click"
                        HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Foreground="MediumPurple"
                        Background="{DynamicResource PrimaryHueMidBrush}"/>
            </StackPanel>
        </materialDesign:Card>
    </ScrollViewer>
</Window>
